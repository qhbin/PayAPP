<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 按钮不可点击状态 -->
    <item android:selectAllOnFocus="false">
        <shape>
            <!-- 圆角 -->
            <corners android:radius="8dp" />
            <!-- 填充色 -->
            <solid android:color="#FFFFFF" />
            <stroke android:width="1px" android:color="#B6B6B6" />
            <!-- 内补 -->
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>
    <!-- 按钮按下时的样式 -->
    <item android:selectAllOnFocus="true">
        <shape>
            <!-- 圆角 -->
            <corners android:radius="8dp" />
            <!-- 填充色 -->
            <solid android:color="#FFFFFF" />
            <stroke android:width="1px" android:color="#03A9F4" />
            <!-- 内补 -->
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>


</selector>