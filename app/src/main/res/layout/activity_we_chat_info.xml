<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.binbin.activity.bindwechat.WeChatInfoActivity"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/we_info_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <TextView android:text="微信号"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/we_uuid"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:maxLength="16"
            android:singleLine="true"
            android:layout_weight="11"
            android:hint="binbin"/>
    </LinearLayout>
    <Button
        android:id="@+id/change_wechat_next"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/we_info_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="更换绑定微信"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:onClick="changeWeChat"/>
</RelativeLayout>
