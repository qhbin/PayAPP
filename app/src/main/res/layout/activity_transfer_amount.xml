<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.binbin.activity.transfer_accounts.TransferAmount"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/tr_amount_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <TextView android:text="金额"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/tr_amount_input"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_weight="11"/>
    </LinearLayout>

    <Button
        android:id="@+id/tr_amount_submit"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/tr_amount_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="确认转账"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:onClick="nextStep"
        />

</RelativeLayout>
