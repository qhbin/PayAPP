<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context="com.binbin.activity.resetpassword.RsetPassword"
    android:background="#ffffff"
    >
    <LinearLayout
        android:id="@+id/reset_uuid_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
    <TextView android:text="账户"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_weight="2"
        />
    <EditText
        android:id="@+id/re_uuid"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:maxLength="16"
        android:singleLine="true"
        android:layout_weight="11"/>
    </LinearLayout>
    <Button
        android:id="@+id/reset_uid_next"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/reset_uuid_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="下一步"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:onClick="nextStep"/>

</RelativeLayout>
